{
    "extends": ["airbnb-base", "prettier"],
    "plugins": ["prettier", "mocha"],
    "rules": {
        "indent": ["error", 4],
        "comma-dangle": ["error", "only-multiline"],
        "prettier/prettier": ["error"]
    },
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "globals": {
        "chai": true,
        "expect": true
    }
}
